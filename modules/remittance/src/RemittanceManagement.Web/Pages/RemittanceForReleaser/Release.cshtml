@page
@using RemittanceManagement.Localization
@model RemittanceManagement.Web.Pages.RemittanceForReleaser.ReleaseModel
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@using Microsoft.AspNetCore.Mvc.Localization
@inject IStringLocalizer<RemittanceManagementResource> L
@{
    Layout = null;
}

@section scripts
    {
    <abp-script src="/Pages/RemittanceForReleaser/Index.js" />
}
<abp-dynamic-form abp-model="Remittance" asp-page="/RemittanceForReleaser/Release">
    <abp-modal size="@(AbpModalSize.Large)">
        <abp-modal-header title="@L["Release"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-form-content />
            <abp-button icon="plus" text="@L["CreateNewReceiver"].Value" button-type="Success" id="CreateNewReceiverButtonId"></abp-button>
        </abp-modal-body>
<abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</abp-dynamic-form>
