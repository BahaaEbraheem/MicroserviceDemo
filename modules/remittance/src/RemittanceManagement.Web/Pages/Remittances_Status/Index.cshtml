@page
@using Microsoft.Extensions.Localization
@using RemittanceManagement.Localization
@using RemittanceManagement.Web.Pages.Remittances_Status
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@using Microsoft.AspNetCore.Mvc.Localization
@model RemittanceManagement.Web.Pages.Remittances_Status.IndexModel
@inject IStringLocalizer<RemittanceManagementResource> L


@section scripts
{
    <script src="~/pages/remittances_status/index.js"></script>
}

<abp-card>
        <abp-card-header>
            <abp-row>
                <abp-column size-md="_6">
                <h2>@L["Remittances_Status"]</h2>
                </abp-column>
         
        </abp-row>
        </abp-card-header>
    <abp-card-body>
        <abp-table striped-rows="true" id="RemittancesTable" class="nowrap">
                <thead>
                    <tr>
                        <th>@L["Actions"]</th>
                    <th>@L["SerialNumber"]</th>
                    <th>@L["Amount"]</th>
                    <th>@L["TotalAmount"]</th>
                    <th>@L["Type"]</th>
                     <th>@L["ApprovedDate"]</th>
                    <th>@L["ReleasedDate"]</th>
                    <th>@L["SenderName"]</th>
                    <th>@L["State"]</th>
                    <th>@L["ReceiverFullName"]</th>
                    <th>@L["CurrencyName"]</th>
                    </tr>
                </thead>
            </abp-table>
    </abp-card-body>
</abp-card>
